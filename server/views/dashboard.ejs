<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales, Demand, Supply, and Waste Management Dashboard</title>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <style>
        body {
            background-color: #1e1e1e;
            color: #ffffff;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
            overflow-y: auto; /* Allow vertical scrolling */
        }
        h1 {
            text-align: center;
            animation: fadeIn 2s ease-in-out;
        }
        @keyframes fadeIn {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }
        .graph-container {
            width: 80%;
            max-width: 1000px;
            margin: 20px 0;
            animation: slideIn 1s ease-in-out;
        }
        @keyframes slideIn {
            0% { transform: translateY(-50px); }
            100% { transform: translateY(0); }
        }
        .graph-container div {
            padding: 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <h1>Sales, Demand, Supply, and Waste Management Dashboard</h1>
    <div class="graph-container">
        <div id="sales-graph"></div>
    </div>
    <div class="graph-container">
        <div id="waste-graph"></div>
    </div>
    <div class="graph-container">
        <div id="recycling-graph"></div>
    </div>
    <div class="graph-container">
        <div id="inventory-graph"></div>
    </div>
    <script>
        // Define the JSON data as JavaScript variables
        const figSalesData = JSON.parse('<%- JSON.stringify(figSales) %>');
        const figWasteData = JSON.parse('<%- JSON.stringify(figWaste) %>');
        const figRecyclingData = JSON.parse('<%- JSON.stringify(figRecycling) %>');
        const figInventoryData = JSON.parse('<%- JSON.stringify(figInventory) %>');

        // Render the plots using Plotly
        Plotly.newPlot('sales-graph', figSalesData.data, figSalesData.layout);
        Plotly.newPlot('waste-graph', figWasteData.data, figWasteData.layout);
        Plotly.newPlot('recycling-graph', figRecyclingData.data, figRecyclingData.layout);
        Plotly.newPlot('inventory-graph', figInventoryData.data, figInventoryData.layout);
    </script>
</body>
</html>
